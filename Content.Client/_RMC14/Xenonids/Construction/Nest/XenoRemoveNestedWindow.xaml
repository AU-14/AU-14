<controls:XenoRemoveNestedWindow
    xmlns="https://spacestation14.io"
    xmlns:controls="clr-namespace:Content.Client._RMC14.Xenonids.Construction.Nest"
    Title="Confirmation"
    MinSize="410 150">
    <BoxContainer Orientation="Vertical">
        <Label Text ="The target is still alive and kicking!" Align="Center"/>
        <Label Text ="Are we sure we want to remove them from the nest?" Align="Center" VerticalExpand="True"/>
        <Control VerticalExpand="True"/>
        <BoxContainer Orientation="Horizontal" HorizontalExpand="True" SeparationOverride="10" Margin="5 5 10 5">
            <Button Name="DenyButton" Access="Public" MinHeight="35" Text="No" StyleClasses="ButtonColorDefaultRed" HorizontalAlignment="Left"/>
            <Control HorizontalExpand="True"/>
            <Button Name="ConfirmButton" Access="Public" MinHeight="35" Text="Yes" HorizontalAlignment="Right"/>
        </BoxContainer>
    </BoxContainer>
</controls:XenoRemoveNestedWindow>
